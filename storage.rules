
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files (e.g., product images, category images)
    // so they can be displayed on the website to all users.
    match /{allPaths=**} {
      allow read;
      // Only allow authenticated users to upload or delete files.
      // This protects your storage from unauthorized writes.
      allow write: if request.auth != null;
    }
  }
}
