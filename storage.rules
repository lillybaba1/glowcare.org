
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files in the bucket.
    // This is necessary for displaying product images, category images,
    // and hero images to all users, including guests.
    match /{allPaths=**} {
      allow read;
      
      // Only allow authenticated users to write (upload, update, delete) files.
      // This protects your storage from unauthorized uploads.
      allow write: if request.auth != null;
    }
  }
}
