
{
  "rules": {
    "products": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    "categories": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    "settings": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "orders": {
      ".indexOn": "customer/userId",
      "$orderId": {
        ".read": "auth.uid != null && (data.child('customer/userId').val() === auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() === true)",
        ".write": "auth.uid != null && ((!data.exists() && newData.child('customer/userId').val() === auth.uid) || (data.exists() && root.child('users').child(auth.uid).child('isAdmin').val() === true))"
      }
    },
    "events_log": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true",
      ".write": "auth != null",
      ".indexOn": "createdAt"
    }
  }
}
