
{
  "rules": {
    "products": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    "settings": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    "categories": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    "users": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('users').child(auth.uid).child('isAdmin').val() === true)",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "orders": {
      // Admins can read the full list of orders.
      // Users can query for their own orders using their UID.
      ".read": "auth != null && (root.child('users').child(auth.uid).child('isAdmin').val() === true || (query.orderByChild === 'customer/userId' && query.equalTo === auth.uid))",
      ".indexOn": ["customer/userId"],
      
      "$orderId": {
        // A user can read their own order by its ID. An admin can read any order.
        ".read": "auth != null && (data.child('customer/userId').val() === auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() === true)",
        
        // A user can only write a *new* order for themselves. Admins can write/update any order.
        // This rule allows guest checkouts (with anonymous auth) and logged-in user checkouts.
        ".write": "auth != null && ((!data.exists() && newData.child('customer/userId').val() === auth.uid) || root.child('users').child(auth.uid).child('isAdmin').val() === true)"
      }
    }
  }
}
